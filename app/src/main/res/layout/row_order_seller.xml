<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardBackgroundColor="@color/white">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Id of order made-->
        <TextView
            android:id ="@+id/orderIdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order: 121212"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

        <!--Date of order made-->
        <TextView
            android:id ="@+id/orderDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd/MM/yyyy"
            android:layout_toStartOf="@id/nextIv"
            android:textColor="@color/textColor" />

        <!--Email of user that made the order-->
        <TextView
            android:id ="@+id/emailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_below="@+id/orderIdTv"
            android:textColor="@color/textColor" />
        
        <!--Amount of order-->
        <TextView
            android:id ="@+id/amountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount: RM32.33"
            android:layout_below="@+id/emailTv"
            android:textColor="@color/textColor" />

        <!--Status of Order: Completed, Cancelled, In Progress-->
        <TextView
            android:id="@+id/statusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailTv"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/nextIv"
            android:text="In Progress"
            android:textColor="@color/colorPrimary"/>
        
        <ImageView
            android:id="@+id/nextIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next_grayish"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
        

    </RelativeLayout>
</androidx.cardview.widget.CardView>